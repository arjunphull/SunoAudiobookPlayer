<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.PlayerActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <TextView
        android:id="@+id/tvChapter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAuthor" />

    <ImageView
        android:id="@+id/playerCoverImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvChapter"
        app:layout_constraintBottom_toTopOf="@+id/skip_back_button"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/skip_back_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:onClick="onSkipBackButtonClick"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/sbLayout"
        app:srcCompat="@drawable/ic_baseline_skip_previous_24"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/btnPlaybackSpeed"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:onClick="onPlaybackSpeedButtonClick"
        android:text="1.0x"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="?attr/colorText"
        app:layout_constraintBottom_toTopOf="@+id/sbLayout"
        app:layout_constraintLeft_toRightOf="@+id/skip_back_button"
        app:layout_constraintRight_toLeftOf="@+id/skip_fwd_button"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/skip_fwd_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:onClick="onSkipFwdButtonClick"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/sbLayout"
        app:srcCompat="@drawable/ic_baseline_skip_next_24"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/sbLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/seek_long_back_button">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="30dp" />

            <TextView
                android:id="@+id/tvLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="25dp"
                android:textAlignment="textEnd"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/seek_long_back_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:onClick="onSeekLongBackButtonClick"
        android:scaleType="fitCenter"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/space_skipBackBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_replay_30_24"
        tools:ignore="ContentDescription" />

    <Space
        android:id="@+id/space_skipBackBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/skip_back_button"
        app:layout_constraintRight_toLeftOf="@+id/seek_back_button" />

    <ImageButton
        android:id="@+id/seek_back_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:onClick="onSeekBackButtonClick"
        android:scaleType="fitCenter"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/space_skipBackBtn"
        app:layout_constraintRight_toLeftOf="@+id/space_seekBackBtn"
        app:srcCompat="@drawable/ic_baseline_replay_10_24"
        tools:ignore="ContentDescription" />

    <Space
        android:id="@+id/space_seekBackBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/seek_back_button"
        app:layout_constraintRight_toLeftOf="@+id/play_pause_button" />

    <ImageButton
        android:id="@+id/play_pause_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:onClick="onPlayPauseButtonClick"
        android:scaleType="fitCenter"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/space_seekBackBtn"
        app:layout_constraintRight_toLeftOf="@+id/space_seekFwdBtn"
        app:srcCompat="@drawable/ic_baseline_play_circle_outline_24"
        tools:ignore="ContentDescription" />

    <Space
        android:id="@+id/space_seekFwdBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/play_pause_button"
        app:layout_constraintRight_toLeftOf="@+id/seek_fwd_button" />

    <ImageButton
        android:id="@+id/seek_fwd_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:onClick="onSeekFwdButtonClick"
        android:scaleType="fitCenter"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/space_seekFwdBtn"
        app:layout_constraintRight_toLeftOf="@+id/space_skipFwdBtn"
        app:srcCompat="@drawable/ic_baseline_forward_10_24"
        tools:ignore="ContentDescription" />

    <Space
        android:id="@+id/space_skipFwdBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/seek_fwd_button"
        app:layout_constraintRight_toLeftOf="@+id/skip_fwd_button" />

    <ImageButton
        android:id="@+id/seek_long_fwd_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:onClick="onSeekLongFwdButtonClick"
        android:scaleType="fitCenter"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/space_skipFwdBtn"
        app:srcCompat="@drawable/ic_baseline_forward_30_24"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>